@model List<Event>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<a asp-controller="Event" asp-action="Create" asp-area="" type="btn btn-success"
   class="btn btn-sm btn-outline-secondary">Create</a>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card shadow-sm">
                @*<img class="card-image-top" src="@item.Image" width="100%" height="225" alt="card image cap" />*@
                <div class="card-body">
                    <p class="card-text">@item.Title</p>
                    <p class="card-text">@item.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-controller="Event" asp-action="Detail" asp-route-id="@item.Id" type="btn btn-success"
                               class="btn btn-sm btn-outline-secondary">View</a>
                            
                        </div>
                        <small class="text-body-secondary">@item.FormatType</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
