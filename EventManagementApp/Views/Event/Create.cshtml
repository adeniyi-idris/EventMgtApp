@using EMA.Enums
@model EMA.Models.Event
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="navbar-container">
</div>
<div class="main-container">
    <section class="space-sm">
        <div class="container">
            <div class="row mb-5">
                <!--end of col-->
            </div>
            <!--end of row-->
            <div class="row flex-md-row card card-md">
                <div class="card-body bg-secondary">
                    <div class="text-center mb-5">
                        <h1 class="h2 mb-2">Create your own Stunning Events</h1>
                        <span>Bring together people in your community</span>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-6 col-lg-5">
                            <form method="post" asp-action="Create" enctype="multipart/form-data">
                                <div class="form-row form-group">
                                    <div class="col">
                                        <label asp-for="Type">Type</label>
                                        <input asp-for="Type" class="form-control form-control-lg" placeholder="Title" />
                                        <span asp-validation-for="Type" class="text-danger"></span>
                                    </div>
                                    <div class="col">
                                        <label asp-for="FormatType">ClubCategory</label>
                                        <select asp-for="FormatType" asp-items="@Html.GetEnumSelectList<FormatType>()" class="form-control form-control-lg">
                                            <option>--Select--</option>
                                        </select>
                                        <span asp-validation-for="FormatType" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <label asp-for="Title">Title</label>
                                        <input asp-for="Title" type="text" class="form-control form-control-lg" placeholder="Description" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <label asp-for="Description">Description</label>
                                        <input asp-for="Description" type="text" class="form-control form-control-lg" placeholder="Description" />
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <label asp-for="StartDate">@Model.StartDate</label>
                                        <input asp-for="StartDate" type="date" class="form-control form-control-lg"/>
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <label asp-for="EndDate">@Model.EndDate</label>
                                        <input asp-for="EndDate" type="date" class="form-control form-control-lg"/>
                                        <span asp-validation-for="EndDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <label asp-for="Location">Location</label>
                                        <input asp-for="Location" class="form-control form-control-lg" />
                                        <span asp-validation-for="Location" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <label asp-for="CreatedBy">@Model.CreatedBy</label>
                                        <input asp-for="CreatedBy" class="form-control form-control-lg" />
                                        <span asp-validation-for="CreatedBy" class="text-danger"></span>
                                    </div>
                                </div>
                                   @* <div class="col">
                                        <label asp-for="Address.State">State</label>
                                        <input asp-for="Address.State" class="form-control form-control-lg" placeholder="State" />
                                        <span asp-validation-for="Address.State" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <label asp-for="Image">Image</label>
                                        <input asp-for="Image" type="file" class="form-control form-control-lg" placeholder="Image" />
                                        <span asp-validation-for="Image" class="text-danger"></span>
                                    </div>
                                </div>*@
                                <div class="form-row form-group">
                                    <div class="col">
                                        <button class="btn btn-block btn-success btn-lg" type="submit">Register</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end of container-->
    </section>
    <!--end of section-->
</div>